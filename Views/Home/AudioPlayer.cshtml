@{
    ViewBag.Title = "Get funky!";
}
<h2>@ViewBag.Title</h2>





<div class="form-horizontal">
    <hr />
 
<div class="form-group">

    <h4> Select .wav file to play from decrypted folder</h4>
    <select class="form-control" id="sel1">
        <option>Sunshine.wav</option>
        <option>BeachWave.wav</option>
        <option>Bird.wav</option>
    </select>
</div>


<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-primary" data-target="#myModal" data-toggle="modal">&#9658; Play </button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Current file playing &ndash; </h4>
            </div>

            <!-- AUDIO FILE PLAYS Here-->
            <div class="modal-body">

                <audio controls style="width:100%">
                    <source src="https://www.w3schools.com/TagS/horse.ogg" type="audio/ogg">
                    <source src="https://www.w3schools.com/TagS/horse.mp3" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Delete file</button>
            </div>

        </div>
    </div>


    <ul class="pager">
        <li><a href="https://localhost:44334/Home/Decrypt">Previous</a></li>
    </ul>
</div>
